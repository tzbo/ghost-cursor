{
    "name": "ghost-cursor2",
    "version": "1.1.17",
    "description": "Move your mouse like a human in puppeteer or generate realistic movements on any 2D plane",
    "repository": "https://github.com/tzbo/ghost-cursor",
    "main": "lib/spoof.js",
    "types": "lib/spoof.d.ts",
    "scripts": {
        "prepare": "husky install && yarn lint && yarn build",
        "build": "tsc",
        "lint": "yarn ts-standard --fix",
        "test": "jest"
    },
    "keywords": [
        "bezier-curve",
        "mouse-movement",
        "botting"
    ],
    "author": "tzbo",
    "license": "ISC",
    "files": [
        "lib/**/*"
    ],
    "dependencies": {
        "@types/bezier-js": "4",
        "bezier-js": "^6"
    },
    "devDependencies": {
        "@swc/core": "^1.2.194",
        "@swc/jest": "^0.2.21",
        "@types/jest": "29",
        "husky": "8",
        "jest": "29",
        "jest-puppeteer": "^6.1.0",
        "puppeteer": "18",
        "ts-standard": "12",
        "typescript": "4"
    },
    "jest": {
        "verbose": true,
        "preset": "jest-puppeteer",
        "modulePathIgnorePatterns": [
            "./lib",
            "./src/test.ts"
        ],
        "reporters": [
            "default",
            "github-actions"
        ],
        "transform": {
            "^.+\\.(t|j)sx?$": "@swc/jest"
        }
    }
}